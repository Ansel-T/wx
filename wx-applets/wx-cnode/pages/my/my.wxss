/* pages/my/my.wxss */

page{
  height: 100%;
}
.container{
  
}
.login-box{
  display: flex;
  align-items: center;
  justify-content:center;
  flex-direction:column;
}
button{
  color: #fff;
  background-color: #2279fe;
}

.button-hover {
  color: #fff;
  background-color: #2279fe;
  opacity: 0.7;
}

.my-info{
  height: 200rpx;
  display: flex;
  align-items:center;
}
.my-info .user-img{
  width:140rpx;
  height:140rpx;
  border-radius:50%;
  border: 5rpx solid #2279fe;
}

.my-list-i{
  display: flex;
  justify-content: space-between;
  align-items:center;
  height: 100rpx;
  border-bottom: 2rpx solid #f5f5f5;
}
.my-list-i .item-left{
  display: flex;
  align-items:center;
}
.my-list-i .icon{
  width:60rpx;
  height: 60rpx;

}