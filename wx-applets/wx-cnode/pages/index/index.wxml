<!--index.wxml-->
<view class="container">
  <view class='header-nav'>
    <view>全部</view>
    <view>精华</view>
    <view>分享</view>
    <view>招聘</view>
  </view>
  <view wx:if="{{topicList}}">
    <view wx:for="{{topicList}}"  wx:key="{{i}}" class="card-item mb20">
        <navigator url="/pages/logs/logs" open-type="navigate" hover-class="none">
            <view class="user-info">
                <image src="{{item.author.avatar_url}}" class="user-img"></image>
                <view class="user-name f24 ml20 mt15">{{item.author.loginname}}</view>
            </view>
            <view class="mt20 mb20 f30 topic-title">{{item.title}}</view>
            <view class='card-item-b f24 fix'>
              <view class='left v-t'>
                <text class='mr20'> <text class='iconfont icon-liulan v-bb f40'></text> 1120</text>
                <text> <text class='iconfont icon-xiaoxi v-m '></text> 320</text>
              </view>
              <view class='right'>
              1 小时前
              </view>
            </view>
        </navigator>
    </view>
  </view>
</view>
