/* pages/topic/topic.wxss */

@import '../wxParse/wxParse.wxss';
.container{
  /* padding: 25rpx; */
}

.top-header{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.top-header .collect view{
  font-size: 28rpx;
  background: #2279fe;
  color: #fff;
  padding:10rpx 20rpx;
  border-radius: 5rpx;
}
.top-header .collect .de-collect{
  background: #ccc;
  color: #333;
}
.user-info{
  display: flex;
  /* justify-content: space-between; */
}
.user-info .user-img{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 5rpx solid #2279fe;
  box-sizing: content-box;
}

.topic-t{
  border-bottom:2rpx dashed #ccc;
}

.reply-item{
  padding: 20rpx 0;
  border-bottom: 2rpx dashed #ccc;
}
.reply-c{
  padding: 10rpx 0 10rpx 80rpx;
}

.item-right-box{
  display: flex;
  align-items: center;
}
.icon-appreciate{
  width: 35rpx;
  height:35rpx;
}